---
import BaseLayout from "@/page-layouts/BaseLayout.astro";
import Hero from "@/page-components/index/Hero.astro";
import TeamAccomplishment from "@/page-components/index/TeamAccomplishment.astro";
import TeamInfo from "@/page-components/index/TeamInfo.astro";
import FIRSTInfo from "@/page-components/index/FIRSTInfo.astro";
import Sponsors from "@/page-components/index/Sponsors.astro";
---

<BaseLayout title="Voodoo Voltage" class="flex flex-col items-center gap-8 mt-0! max-w-[2400px] homepage">
    <Hero />
    <TeamInfo />
    <TeamAccomplishment />
    <FIRSTInfo />
    <Sponsors />
</BaseLayout>

<style is:global>
  @reference '@/assets/global.css';

  .homepage section {
    @apply max-w-7xl mx-auto py-8 w-full;
  }

  .homepage h2 {
    @apply text-4xl font-bold text-center mb-2;
  }

  .homepage h3 {
    @apply text-primary;
  }


  .homepage .subheading {
    @apply text-2xl font-semibold text-center text-primary;
  }

</style>