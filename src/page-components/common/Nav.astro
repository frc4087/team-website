---
import Logo from "@/assets/logos/vv.png"
import { Picture } from "astro:assets";
---
<vv-nav-wrapper
    class="block fixed top-0 z-100 w-full"
>
    <nav class:list={[
        "h-8 w-fit my-2 mx-auto px-4",
        "flex flex-row items-center justify-center gap-2",
        "border border-base-content rounded-2xl",
        "shadow-xl backdrop-blur-2xl"
    ]}>
        <a href="/">
            <Picture
                src={Logo}
                alt="VoodooVoltage Logo"
                layout="fixed"
                fit="fill"
                loading={"eager"}
                decoding={"sync"}
                pictureAttributes={{ class: "avatar h-8 w-8 rounded-full mb-[2px]" }}
            />
        </a>
        <a href="/blog/">
            Blog
        </a>
        <a href="/join/">
            Join
        </a>
        <a href="/sponsor/">
            Sponsor
        </a>
    </nav>
</vv-nav-wrapper>

<style>
	@reference "@/assets/global.css";

	nav a {
		@apply font-semibold block leading-8 px-2 hover:bg-primary/10 hover:rounded-xs cursor-pointer;
	}
</style>