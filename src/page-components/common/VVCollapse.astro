---
export interface Props {
    title: {
        text: string
        size: 'sm' | 'md' | 'lg'
    }
    class?: string
}
const { title, class: className } = Astro.props
---

<details class:list={['collapse collapse-arrow cursor-pointer', className]}>
    <summary
        class:list={[
            'collapse-title font-medium flex items-center py-2 px-4',
            {
                'text-sm': title.size === 'sm',
                'text-base': title.size === 'md',
                'text-lg': title.size === 'lg',
            },
        ]}
        style="min-height: unset;"
    >
        {title.text}
    </summary>
    <slot />
</details>

<style is:global>
    .collapse-arrow > .collapse-title:after {
        top: 1.25em;
    }
</style>
